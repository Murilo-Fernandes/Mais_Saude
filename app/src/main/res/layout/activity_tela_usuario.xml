<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".TelaUsuario">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#D9EBDE"
        android:orientation="vertical"
        android:padding="16dp">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="#8B4513"
            app:title="Perfil"
            app:titleTextColor="@android:color/white"/>


        <!-- Cabeçalho com avatar e nome -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginBottom="24dp"
            android:paddingTop="24dp">


            <ImageView
                android:id="@+id/imgAvatarPerfil"
                android:layout_width="120dp"
                android:layout_height="140dp"
                android:layout_marginRight="16dp"
                android:adjustViewBounds="true"
                android:background="@android:color/transparent"
                android:scaleType="fitCenter"
                android:src="@drawable/cadastrofeminino" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/txtNomePerfil"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Nome do Usuário"
                    android:textColor="#000000"
                    android:textSize="24sp"
                    android:fontFamily="@font/aboreto"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/txtIdadeSexoPerfil"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="30 anos, Feminino"
                    android:textColor="#000000"
                    android:textSize="16sp"
                    android:fontFamily="@font/aboreto"
                    android:layout_marginTop="4dp" />
            </LinearLayout>
        </LinearLayout>

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:fillViewport="true">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <!-- Seção de Informações Pessoais -->
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Informações Pessoais"
                    android:textColor="#009688"
                    android:textSize="18sp"
                    android:fontFamily="@font/aboreto"
                    android:textStyle="bold"
                    android:layout_marginBottom="8dp"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:background="@drawable/rounded_border"
                    android:padding="16dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginBottom="8dp">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:fontFamily="@font/aboreto"
                            android:text="Peso:"
                            android:textColor="#FFFFFF"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/txtPesoPerfil"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:fontFamily="@font/aboreto"
                            android:text="65 kg"
                            android:textAlignment="textEnd"
                            android:textColor="#F6F6F6"
                            android:textStyle="bold" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginBottom="8dp">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:fontFamily="@font/aboreto"
                            android:text="Altura:"
                            android:textColor="#FFFFFF"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/txtAlturaPerfil"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:fontFamily="@font/aboreto"
                            android:text="170 cm"
                            android:textAlignment="textEnd"
                            android:textColor="#F6F6F6"
                            android:textStyle="bold" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:fontFamily="@font/aboreto"
                            android:text="Tipo Sanguíneo:"
                            android:textColor="#FFFFFF"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/txtTipoSanguineoPerfil"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:fontFamily="@font/aboreto"
                            android:text="O+"
                            android:textAlignment="textEnd"
                            android:textColor="#F1ECEC"
                            android:textStyle="bold" />
                    </LinearLayout>
                </LinearLayout>

                <!-- Seção de Estatísticas -->
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Estatísticas"
                    android:textColor="#009688"
                    android:textSize="18sp"
                    android:fontFamily="@font/aboreto"
                    android:textStyle="bold"
                    android:layout_marginTop="24dp"
                    android:layout_marginBottom="8dp"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginBottom="16dp">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="70dp"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:background="@drawable/rounded_border"
                        android:padding="12dp"
                        android:layout_marginEnd="8dp">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/aboreto"
                            android:text="IMC"
                            android:textAlignment="center"
                            android:textColor="#FAFAFA"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/txtIMCPerfil"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="22.5"
                            android:textAlignment="center"
                            android:textColor="#009688"
                            android:textSize="24sp"
                            android:fontFamily="@font/aboreto"
                            android:textStyle="bold"/>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="70dp"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:background="@drawable/rounded_border"
                        android:padding="12dp"
                        android:layout_marginStart="8dp">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/aboreto"
                            android:text="Nível"
                            android:textAlignment="center"
                            android:textColor="#FDFDFD"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/txtNivelPerfil"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Iniciante"
                            android:textAlignment="center"
                            android:textColor="#009688"
                            android:textSize="18sp"
                            android:fontFamily="@font/aboreto"
                            android:textStyle="bold"/>


                    </LinearLayout>

                </LinearLayout>
                <!-- Barra de Progresso Personalizada com Estrela -->
                <LinearLayout
                    android:layout_width="363dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="30dp"
                    android:layout_marginBottom="8dp"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <FrameLayout
                        android:layout_width="60dp"
                        android:layout_height="60dp"
                        android:layout_marginEnd="8dp">

                        <!-- Estrela como imagem de fundo -->
                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:src="@drawable/estrela"
                            android:scaleType="fitCenter" />

                        <!-- Número do nível -->
                        <TextView
                            android:id="@+id/textNivel"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:gravity="center"
                            android:shadowColor="#FFF"
                            android:shadowDx="3"
                            android:shadowDy="3"
                            android:shadowRadius="1"
                            android:text="1"
                            android:textColor="#001F3F"
                            android:textSize="22sp"
                            android:textStyle="bold" />
                    </FrameLayout>

                    <ProgressBar
                        android:id="@+id/progressBarMissao"
                        style="?android:attr/progressBarStyleHorizontal"
                        android:layout_width="298dp"
                        android:layout_height="28dp"
                        android:layout_weight="1"
                        android:background="@null"
                        android:max="100"
                        android:progress="20"
                        android:progressDrawable="@drawable/progress_bar_background" />
                </LinearLayout>

            </LinearLayout>
        </ScrollView>



    </LinearLayout>
    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/bottom_navigation"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="#009688"
        app:itemIconTint="@color/white"
        app:itemTextColor="@color/white"
        app:menu="@menu/menu_bottom"
        style="@style/CustomBottomNav"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <FrameLayout
        android:id="@+id/sobre_overlay"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#AA000000"
        android:visibility="gone"
        android:clickable="true"
        android:focusable="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:padding="32dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/sobre_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/rounded_dica_box"
                android:padding="24dp"
                android:text="ℹ️ Sobre o App\n\nA Agenda 2030 da ONU propõe 17 Objetivos de Desenvolvimento Sustentável para transformar o mundo.\n\nO Objetivo 3 visa assegurar uma vida saudável e promover o bem-estar para todas as pessoas, em todas as idades.\n\nFoi com essa missão que criamos o &#39;Mais Saúde&#39; — um aplicativo para incentivar hábitos saudáveis de forma leve, divertida e acessível a todos."
                android:textColor="#FFFFFF"
                android:textSize="18sp"
                android:fontFamily="@font/aboreto"
                android:gravity="center" />
        </LinearLayout>
    </FrameLayout>


</androidx.constraintlayout.widget.ConstraintLayout>